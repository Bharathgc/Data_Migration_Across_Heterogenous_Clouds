<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
<constant name="struts.devMode" value="true" />
   <package name="Register" extends="hibernate-default">
      <action name="adduser" class="Register.Signupmain" method="execute">
            <result name="success">/otp.jsp</result>
            <result name="error">/signup.jsp</result>
      </action>
      <action name="loginuser" class="Register.Login" method="valid">
            <result name="success">/welcome.jsp</result>
            <result name="error">/signin.jsp</result>
      </action>
    
    <action name="otpcheck" class="Register.Otp">
            <result name="success">/welcome.jsp</result>
            <result name="error">/otp.jsp</result>
      </action>

   </package>
</struts>